        .column
          input#calculate.float-right(placeholder="Calcula cantidad")
          script.
            const calculateInput = window.calculate;
            const formatter = Intl.NumberFormat('es-mx', {
              currency: 'MXN',
              minimumFractionDigits: 2,
            });

            const iterateAndFormatPriceColumn = (column, value) => {
              for (columnItem of column) {
                const price = Number(columnItem.getAttribute('value'));

                if (price === 0) {
                  continue;
                }

                const priceFormatted = formatter.format(Number(price * value).toFixed(2))
                columnItem.innerHTML = `$ ${priceFormatted}`
              }
            }

            calculateInput.addEventListener('input', (e) => {
              let numericValue = e.target.value.replace(/\D/g, "");
              calculateInput.value = numericValue;

              if (e.target.value === '') {
                numericValue = '1';
              }

              const buyColumn = document.getElementsByClassName('buy');
              const sellColumn = document.getElementsByClassName('sell');

              iterateAndFormatPriceColumn(buyColumn, numericValue);
              iterateAndFormatPriceColumn(sellColumn, numericValue);
            });


      .row
        .column
          table.centered.comfortable
            thead
              tr
                th(width="25%") Banco
                th(width="25%") Compra
                th(width="25%") Venta
                th(width="25%") Comportamiento
            tbody
              each bank in Object.keys(data.banks)
                - const buy = data.banks[bank]['buy'];
                - const sell = data.banks[bank]['sell'];
                - const buyClassname = buy === data.meta.lowestBuy ? "red" : "" || buy === data.meta.highestBuy ? "green" : "buy";
                - const sellClassname = sell === data.meta.lowestSell ? "green" : "" || sell === data.meta.highestSell ? "red" : "sell"
                tr
                  td.capitalize= bank
                    if bank === 'new-bank'
                      sup.label ¡Nuevo!
                  td(class=`${buyClassname} buy` value=buy ? buy : 0) $ #{buy ? buy.toFixed(2) : '??'}
                  td(class=`${sellClassname} sell` value=sell ? sell : 0) $ #{sell ? sell.toFixed(2) : '??'}
                  td
                    div(class=`graph-${bank}`)
                    script.
                      const options_#{bank} = {
                        ...miniChartOptions,
                        series: [
                          {
                            name: '#{bank}',
                            data: store.#{bank},
                          }
                        ],
                      };
                      const chart_#{bank} = new ApexCharts(
                        document.querySelector('.graph-#{bank}'),
                        options_#{bank}
                      );
                      chart_#{bank}.render();

